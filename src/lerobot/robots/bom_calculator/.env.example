# BOM Calculator Environment Configuration
# Copy this file to .env and update with your values

# ==========================================
# Application Configuration
# ==========================================
APP_NAME="BOM Calculator"
APP_VERSION="1.0.0"
DEBUG=false
NODE_ENV=production
MODE=development  # development | production

# ==========================================
# Port Configuration
# ==========================================
BACKEND_PORT=8000
FRONTEND_PORT=3000
NGINX_PORT=80
NGINX_SSL_PORT=443
REDIS_PORT=6379
POSTGRES_PORT=5432
PROMETHEUS_PORT=9090
GRAFANA_PORT=3001

# ==========================================
# Backend Configuration
# ==========================================
# Database
DATABASE_URL=sqlite+aiosqlite:///./bom_calculator.db
# For PostgreSQL (production):
# DATABASE_URL=postgresql+asyncpg://bom_user:secure_password@postgres:5432/bom_calculator

# CORS Settings
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# Security
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# WebSocket
WS_HEARTBEAT_INTERVAL=30

# File paths
DATA_DIR=./data

# ==========================================
# Frontend Configuration
# ==========================================
VITE_API_URL=http://localhost:8000
VITE_WS_URL=ws://localhost:8000/ws

# ==========================================
# PostgreSQL Configuration (Production)
# ==========================================
POSTGRES_DB=bom_calculator
POSTGRES_USER=bom_user
POSTGRES_PASSWORD=secure_password_change_in_production

# ==========================================
# Redis Configuration (Production)
# ==========================================
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_DB=0

# ==========================================
# Monitoring Configuration
# ==========================================
GRAFANA_PASSWORD=admin
PROMETHEUS_RETENTION_TIME=15d

# ==========================================
# SSL Configuration (Production)
# ==========================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# ==========================================
# Email Configuration (Optional)
# ==========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@bomcalculator.com

# ==========================================
# Backup Configuration (Optional)
# ==========================================
BACKUP_ENABLED=false
BACKUP_SCHEDULE="0 2 * * *"  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_PATH=./backups

# ==========================================
# Rate Limiting (Optional)
# ==========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60  # seconds

# ==========================================
# Logging Configuration
# ==========================================
LOG_LEVEL=INFO  # DEBUG | INFO | WARNING | ERROR | CRITICAL
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5

# ==========================================
# Feature Flags
# ==========================================
ENABLE_WEBSOCKET=true
ENABLE_METRICS=false
ENABLE_CACHE=false
ENABLE_EMAIL_NOTIFICATIONS=false

# ==========================================
# External Services (Optional)
# ==========================================
# Sentry for error tracking
SENTRY_DSN=

# Analytics
GOOGLE_ANALYTICS_ID=
MIXPANEL_TOKEN=

# ==========================================
# Development Tools
# ==========================================
# Hot reload
WATCHPACK_POLLING=true

# Python
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# ==========================================
# Docker Configuration
# ==========================================
COMPOSE_PROJECT_NAME=bom-calculator
DOCKER_BUILDKIT=1
COMPOSE_DOCKER_CLI_BUILD=1